<!-- main container -->
<section class="main-container col1-layout home-content-container">
  <div class="container">
    <div class="row">
      <div class="std">
        <!-- best seller -->
        <div class="col-lg-8 col-xs-12 col-sm-8 best-seller-pro wow">
          <div class="slider-items-products">
            <div class="new_title center">
              <h2>BÁN CHẠY NHẤT</h2>
            </div>
            <div id="best-seller-slider" class="product-flexslider hidden-buttons">
              <div class="slider-items slider-width-col4"> 

                {{#each listBestSellerProduct}}
                  <div class="item">  
                  <div class="col-item">
                    {{#if discount}}
                    <div class="sale-label sale-top-right">Sale</div>
                    {{else}} {{#if (isNewProduct _id)}}
                    <div class="new-label new-top-right">New</div>
                    {{/if}} {{/if}}
                    <div class="images-container"> <a class="product-image" title="{{name}}" href="/product/detail/{{_id}}"> <img src="{{images_sources.[0].url}}" class="img-responsive" alt="a" /> </a>
                      <div class="actions">
                        <div class="actions-inner">
                          <button onclick="window.location.href='/cart/addproduct/{{_id}}'" type="button" title="Thêm vào giỏ hàng" class="button btn-cart"><span>Thêm vào giỏ</span></button>
