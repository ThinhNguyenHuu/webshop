<section class="main-container col1-layout">
  <div class="main container">
    <div class="account-login">
      <div class="page-title">
        <h2>Tài khoản của bạn</h2>
      </div>
      <fieldset class="col2-set">
            <div class="col-1 new-users">
                <img src="{{user.avatar.url}}" alt = "avatar"  style="max-width: 100%; max-height: 100%"/>
            </div>
            <div class="col-2 registered-users">
                <div class="content">
                    <h5>Họ và tên: {{user.fullname}}</h5>
                    <br>

                    <h5>Địa chỉ email: {{user.email}}</h5>
                    <br>
                    {{#if user.googleId}}
                    {{else}}
                    <h5>Tên đăng nhập: {{user.username}}</h5>
                    {{/if}}
                    <br>
              
                    <div class="buttons-set">
                        {{#if user.googleId}}
                        <button class="button login"> <a href="/user/info/updateinfo" >Cập nhật ảnh đại diện</a></button>
                        {{else}}
                        <button class="button login"> <a href="/user/info/updateinfo" >Cập nhật thông tin</a></button>
                        <button class="button login"> <a href="/user/info/updatepassword">Đổi mật khẩu</a></button>
                        {{/if}}
                    </div>
                    
            </div>
        </div>
        </form>
      </fieldset>
    </div>
    <br>
    <br>
    <br>
    <br>
    <br>
  </div>
</section>