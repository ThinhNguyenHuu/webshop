<section class="main-container col1-layout">
    <div class="main container">
      <div class="col-main">
        <div class="cart wow">
          <div class="page-title">
            <h2>Giỏ hàng của bạn</h2>
          </div>
          {{#if products}}
          <div class="table-responsive">
              <input type="hidden" value="Vwww7itR3zQFe86m" name="form_key">
              <fieldset>
                <table class="data-table cart-table" id="shopping-cart-table">
                  <colgroup>
                  <col width="1">
                  <col>
                  <col width="1">
                  <col width="1">
                  <col width="1">
                  <col width="1">
                  <col width="1">
                  </colgroup>
                  <thead>
                    <tr class="first last">
                      <th rowspan="1">&nbsp;</th>
                      <th rowspan="1"><span class="nobr">Tên sản phấm</span></th>
                      <th rowspan="1"></th>
                      <th colspan="1" class="a-center"><span class="nobr">Giá</span></th>
                      <th class="a-center" rowspan="1">Số lượng</th>
                      <th colspan="1" class="a-center">Thành tiền</th>
                      <th class="a-center" rowspan="1">&nbsp;</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr class="first last">
                      <td class="a-right last" colspan="50"><button onclick="window.location.href='{{referer}}'" class="button btn-continue" title="Continue Shopping" type="button"><span><span>Tiếp tục mua sắm</span></span></button>
                        <!--button class="button btn-update" title="Cập nhật giỏ hàng" value="update_qty" name="update_cart_action" type="submit"><span><span>Cập nhật</span></span></button-->
                        <button id="empty_cart_button" class="button btn-empty" title="Xóa tất cả khỏi giỏ" value="empty_cart" name="update_cart_action" type="button" onclick="window.location.href='/cart/removeall'"><span><span>Xóa tất cả</span></span></button></td>
                    </tr>
                  </tfoot>
                  <tbody>
                    {{#each products}}
                    <tr class="first odd">
                      <form method="GET" action="/cart/updateproduct/{{product._id}}">
                        <td class="image"><a class="product-image"  href="/product/detail/{{product._id}}"><img width="75" alt="{{product.name}}" src="{{product.images_sources.[0].url}}"></a></td>
                        <td><h2 class="product-name"> <a href="/product/detail/{{product._id}}">{{product.name}}</a> </h2></td>
                        <td class="a-center"><button title="Cập nhật số lượng" class="edit-bnt" type="submit"></button></td>
                        <td class="a-right"><span class="cart-price"> <span class="price"> {{discountPrice product.price product.discount}}đ </span> </span></td>
                        <td class="a-center movewishlist"><input maxlength="12" class="input-text qty" title="Số lượng" size="4" value="{{qty}}" name="qty" id="qty"></td>
                        <td class="a-right movewishlist"><span class="cart-price"> <span class="price">{{totalPrice}}đ</span> </span></td>
                        <td class="a-center last"><a class="button remove-item" title="Xóa khỏi giỏ hàng" href="/cart/removeproduct/{{product._id}}"><span><span>Xóa khỏi giỏ</span></span></a></td>
                      </form>
                    </tr>
                    {{/each}}
                  </tbody>
                </table>
              </fieldset>
          </div>
          <!-- BEGIN CART COLLATERALS -->
        <form id="shipping-zip-form" method="post" action="/order/addorder">
          <div class="cart-collaterals row">
            <div class="col-sm-4">
              <div class="shipping">
                <h3>Địa chỉ nhận hàng</h3>
                  <label for="address">Địa chỉ</label>
                  <div class="input-box">
                    <input type="text" value="" name="address" id="address" class="input-text validate-postcode" required>
                  </div>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="shipping">
                <h3>Số điện thoại liên lạc</h3>
                <label for="phonenum">Số điện thoại</label>
                  <div class="input-box">
                    <input type="text" value="" name="phonenum" id="phonenum" class="input-text validate-postcode" required>
                  </div>
              </div>
            </div>
            <div class="totals col-sm-4">
              <h3>Tổng tiền của giỏ hàng</h3>
              <div class="inner">
                <table class="table shopping-cart-table-total" id="shopping-cart-totals-table">
                  <colgroup>
                  <col>
                  <col width="1">
                  </colgroup>
                  <tfoot>
                    <tr>
                      <td colspan="1" class="a-left" style=""><strong>Tổng tiền</strong></td>
                      <td class="a-right" style=""><strong><span class="price">{{totalPriceAll}}đ</span></strong></td>
                    </tr>
                  </tfoot>
                  <!--tbody>
                    <tr>
                      <td colspan="1" class="a-left" style=""> Subtotal </td>
                      <td class="a-right" style=""><span class="price">$77.38</span></td>
                    </tr>
                  </tbody-->
                </table>
                <ul class="checkout">
                  <li>
                    <button class="button btn-proceed-checkout" title="Đặt hàng" type="submit"><span>Đặt hàng</span></button>
                  </li>
                  <br>
                  <!--li><a title="Checkout with Multiple Addresses" href="multiple_addresses.html">Checkout with Multiple Addresses</a> </li>
                  <br-->
                </ul>
              </div>
              <!--inner--> 
              
            </div>
           
          </div>
        </form>
          <!--cart-collaterals--> 
          {{else}}
          <h1>Không có sản phẩm nào trong giỏ hàng.</h1>
          <br>
          <h2 ><a href='/' style="color: red;">Về trang chủ</a></h2>
          {{/if}}
        </div>
      </div>
    </div>
  </section>
 